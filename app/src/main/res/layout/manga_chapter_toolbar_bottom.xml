<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chapter_toolbar_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sixty_opacity_black"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:contentInsetEnd="10dp"
    app:contentInsetStart="10dp"
    >

    <ImageView
        android:id="@+id/toolbar_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:src="@drawable/back_arrow"></ImageView>

    <ImageView
        android:id="@+id/toolbar_forward_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:src="@drawable/forward_arrow"></ImageView>

</androidx.appcompat.widget.Toolbar>